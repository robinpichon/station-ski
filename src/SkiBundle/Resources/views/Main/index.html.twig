{% extends 'materialize/layout.html.twig' %}
{% block title %}Accueil{% endblock %}

{% block content %}
    <div class="carousel carousel-slider center" data-indicators="true">
      <div class="carousel-fixed-item center">
        <h4 class="white-text" style="text-shadow: 2px 0 0 black, 0 2px 0 black, 0 -2px 0 black, -2px 0 0 black, 2px 2px 0 black, 2px -2px 0 black, -2px 2px 0 black, -2px -2px 0 black;">
            Trouvez la station id√©ale
        </h4>
        <a href="{{ path('list_action') }}" class="btn waves-effect white black-text">Liste des stations</a>
      </div>
      <div class="carousel-item" href="#">
          <img src="{{ asset('bundles/ski/img/slides/1.jpg') }}">
      </div>
      <div class="carousel-item" href="#">
          <img src="{{ asset('bundles/ski/img/slides/2.jpg') }}">
      </div>
      <div class="carousel-item" href="#">
          <img src="{{ asset('bundles/ski/img/slides/3.jpg') }}">
      </div>
    </div>

    <script>
        $(document).ready(function(){
            $('.carousel.carousel-slider').carousel({
                fullWidth: true
            });

            autoplay();
            function autoplay() {
                $('.carousel.carousel-slider').carousel('next');
                setTimeout(autoplay, 4500);
            }
        });
    </script>
{% endblock %}
