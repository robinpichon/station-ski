{% extends 'materialize/layout.html.twig' %}
{% block title %}Liste des stations{% endblock %}

{% block content %}
  <div class="row">
      <!--<div class="col s12"><h3>Liste des stations</h3></div>-->
      <ul>
          {% for station in stations %}
            <div class="col s3">
                <a href="{{ path('detail_action', {'stationId': station.id}) }}">
                <div class="card">
                    <div class="card-image waves-effect waves-block waves-light">
                      <img src="{{ asset('bundles/ski/img/station/' ~ station.image) }}" width="415" height="185" class="activator">
                    </div>
                    <div class="card-content">
                      <span class="card-title grey-text text-darken-4">{{ station.name }}</span>
                    </div>
                </div></a>
            </div>
          {% else %}
              <div class="col s12">Aucun station.</div>
          {% endfor %}
      <ul>
  </div>
{% endblock %}
