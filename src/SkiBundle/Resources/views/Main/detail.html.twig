{% extends 'materialize/layout.html.twig' %}
{% block title %}Liste des avis{% endblock %}

{% block content %}
  <div class="row">
    <div class="col s12"><h3>{{ station.name }}</h3></div>
    <div class="col s6">
      <div class="card">
        <div class="card-image">
          <img src="{{ asset('img/' ~ station.image) }}">
          <!--<span class="card-title">Card Title</span>-->
        </div>
        <div class="card-content">
          <p>{{ station.description }}</p>
        </div>
        <!--<div class="card-action">
          <a href="#">This is a link</a>
        </div>-->
      </div>
    </div>
    <div class="col s6">
      <ul class="collection">
        {% for review in reviews %}
          <li class="collection-item avatar">
            <img src="{{ asset('img/user.png') }}" alt="" class="circle">
            <span class="title">Pr√©nom N. ({{ review.userId }})</span>
            <p>{{ review.comment }}</p>
            <a href="#!" class="secondary-content">{{ review.notation }}/5 <!--<i class="material-icons">grade</i>--></a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}
