{% extends 'materialize/layout.html.twig' %}
{% block title %}Connexion{% endblock %}

{% block content %}
  <div class="row">
      <h4>Connexion</h4>

      {% if error %}
          <div id="card-alert" class="card red" style="margin-bottom: 30px;">
              <div class="card-content white-text"><p>{{ error.messageKey|trans(error.messageData, 'security') }}</p></div>
          </div>
      {% endif %}

      <form action="{{ path('login') }}" method="post">
          <div class="input-field">
            <input type="email" id="username" name="_username" value="{{ last_username }}" class="validate" />
            <label for="username">Adresse mail</label>
          </div>

          <div class="input-field">
            <input type="password" id="password" name="_password" class="validate" />
            <label for="password">Mot de passe</label>
          </div>

          <button type="submit" class="modal-action waves-effect waves-green btn">Connexion</button>
      </form>
  </div>
{% endblock %}
